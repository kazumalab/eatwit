.form
  = form_for @user do |f|
    - if @user.errors
      .box
        - @user.errors.full_messages.each do |_message|
          %li= _message
    = f.label :name
    .input
      = f.text_field :name
    = f.label :email
    .input
      = f.text_field :email
    = f.label :password
    .input
      = f.password_field :password
    = f.label :password_confirmation
    .input
      = f.password_field :password_confirmation
    = f.submit class: "button"
  